<h2> <%= @cocktail.name %> </h2>
<p> <%= @dose.description %> </p>
<p> <%= @ingredient.name %> </p>

<%= link_to "Delete #{@cocktail.name}",
cocktail_path(@cocktail),
method: :delete,
data: { confirm: "Are you sure you want to delete this wonderfull cocktail forever?" } %>

<%= simple_form_for ([@cocktail, @dose]) do |f| %>
  <%= f.input :description %>
  <%= f.input :ingredient, collection: Ingredient.all %>
  <%= f.submit %>
<% end %>


<%= link_to "return to Cocktail list", cocktails_path %>